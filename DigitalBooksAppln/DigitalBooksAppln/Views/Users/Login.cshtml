@model DigitalBooksAppln.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .main {
        background-image: url('/Images/Login.jpg');
        margin: 0;
    }
</style>

<div class="main">
    <center><h3 style="color:blueviolet">Login</h3></center>
    <div class="container">
        <div class="row mt-lg-6">
            <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5">
                <div class="text-center">
                    <a class="text-light btn btn-primary font-weight-bold" asp-controller="Login">Sign In</a>
                </div>
                <form class="form-horizontal" asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input type="text" asp-for="UserName" placeholder="Enter username" class="form-control" autocomplete="off" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailId"></label>
                        <input type="text" asp-for="EmailId" placeholder="Enter EmailId" class="form-control" autocomplete="off" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" placeholder="Enter password" class="form-control" autocomplete="off" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserType"></label><br />
                        <select name="usertype" id="usertype" style="padding-right:242px;padding-top:9px;padding-bottom:9px;" required>
                            <option value="">--Select Usertype--</option>
                            <option value="author">Author</option>
                            <option value="reader">Reader</option>
                            <option value="reader">Admin</option>
                        </select>
                    </div><br />
                    <div class="text-center">
                        <input type="submit" class="btn btn-block btn-primary mb-2" value="Login" />
                    </div>
                    <div>
                        <span>Need an account? <a asp-controller="Users" asp-action="Register">Sign Up</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




